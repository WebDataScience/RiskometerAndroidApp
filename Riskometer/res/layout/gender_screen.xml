<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="Gender"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/maleButtonGenderScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView1"
        android:background="#58ACFA"
        android:text="  Male  " />

    <Button
        android:id="@+id/femaleButtonGenderScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/maleButtonGenderScreen"
        android:layout_alignBottom="@+id/maleButtonGenderScreen"
        android:layout_alignParentRight="true"
         android:background="#58ACFA"
        android:layout_toRightOf="@+id/textView1"
        android:text="Female" />

</RelativeLayout>
