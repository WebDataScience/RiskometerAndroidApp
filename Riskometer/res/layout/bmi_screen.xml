<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Average Inpatient BMI"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/enterdBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="10-100  {BMI=(lb)/(in)2}"
        		android:gravity="center"
        
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

   <Button
       android:id="@+id/nextButtonBMIScreen"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/enterdBMI"
       android:layout_alignRight="@+id/textView1"
       android:layout_below="@+id/enterdBMI"
       android:layout_marginTop="86dp"
       android:visibility="invisible"
       android:background="#58ACFA"
       android:enabled="false"
       android:text="Next" />
 
</RelativeLayout>
